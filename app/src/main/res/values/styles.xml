<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialDrawerTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.Todo.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Todo.MaterialCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/space_large</item>
        <item name="cardElevation">@dimen/space_small</item>
        <item name="contentPaddingBottom">@dimen/space_medium</item>
        <item name="contentPaddingLeft">@dimen/space_medium</item>
        <item name="contentPaddingRight">@dimen/space_medium</item>
    </style>
</resources>